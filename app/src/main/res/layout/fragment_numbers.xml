<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".ui.main.Numbers">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            style="@style/AppTheme"
            android:id="@+id/editButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_button"
            android:contentDescription="@string/pencile"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toTopOf="@+id/numberList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toEndOf="@+id/numbersDropdown"
            app:layout_constraintTop_toTopOf="@+id/numbersDropdown"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_button"
            android:contentDescription="@string/trash_can"
            android:foregroundTint="@color/white"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toTopOf="@+id/numberList"
            app:layout_constraintEnd_toStartOf="@+id/numbersDropdown"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numbersDropdown"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_contacts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/numbersDropdown"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:background="@color/spinnerBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/numberList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="30dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numbersDropdown" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>